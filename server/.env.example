# Environment Configuration Example
# Copy this file to .env.development or .env.production and update with your values

# Application
NODE_ENV=development
PORT=3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/resxcan
MONGODB_URI_TEST=mongodb://localhost:27017/resxcan_test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Redis Configuration (for Queue System)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Storage Configuration
STORAGE_BASE_PATH=storage

# Google Cloud Pub/Sub Configuration (for Email Invoice Processing)
# Set GOOGLE_APPLICATION_CREDENTIALS environment variable to path of service account key file
# Example: export GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account-key.json"
PUBSUB_PROJECT_ID=your-gcp-project-id
PUBSUB_TOPIC_NAME=email-invoices
PUBSUB_SUBSCRIPTION_NAME=email-invoices-sub

# Email Configuration
# Choose either 'gmail' or 'imap' as the provider
EMAIL_PROVIDER=gmail

# Gmail API Configuration (if using EMAIL_PROVIDER=gmail)
# Get these from Google Cloud Console > APIs & Services > Credentials
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REFRESH_TOKEN=your-gmail-refresh-token

# IMAP Configuration (if using EMAIL_PROVIDER=imap)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=your-email@example.com
IMAP_PASSWORD=your-app-password
IMAP_TLS=true

# Email Polling Configuration
# Polling interval in milliseconds (default: 60000 = 1 minute)
EMAIL_POLL_INTERVAL=60000
